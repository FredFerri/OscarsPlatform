{% extends 'base.html.twig' %}

{% block body %}

    <div id="content">

        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title"> <span class="icon"> <i class="icon-info-sign"></i> </span>
                            <h5>Sondage "{{ poll.name }}"</h5>
                        </div>

                        <div class="widget-content collapse in">
                            {% for question in listQuestions %}
                                <div id="question_mainblock_{{ loop.index }}" class="question_mainblock">
                                    <a class="poll_close_btn btn-large">X</a>
                                    <label>Question {{ loop.index }}</label>
                                    <textarea id="question_{{ loop.index }}" class="question" rows="4">{{ question.content }}</textarea>
                                    <select class="question_type">
                                        {% for type in listTypes %}
                                            {% if type.id == question.id_type.id %}
                                                <option value="{{ type.id }}" selected="selected">{{ type.name }}</option>
                                            {% else %}
                                                <option value="{{ type.id }}">{{ type.name }}</option>
                                            {% endif %}
                                        {% endfor %}
                                    </select>
                                    {% for answer in listAnswers[loop.index0] %}
                                        <div class="answer_block">
                                            <label>RÃ©ponse {{ loop.index }}</label>
                                            <textarea id="answer_{{ loop.index }}" class="answer">{{ answer.content }}</textarea>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $(".active").toggleClass('active');
        })
    </script>

    <!--end-main-container-part-->

{% endblock %}

